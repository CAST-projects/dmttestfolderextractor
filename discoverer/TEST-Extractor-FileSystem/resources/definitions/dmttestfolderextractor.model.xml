<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<document>
    <library imageRootPath="icons" javaRootPath="com.castsoftware.dmt.model" product="DMT" symbol="dmttestfolderextractor" version="1.0" dependencies="delivery:2.0">
    	<entity symbol="SourceAddPackageReply" baseEntity="delivery.AddPackageReply" singleton="true">
    		<field symbol="name" override="true" value="Files on your file system"/>
    		<field symbol="question" override="true" value="delivery.AddPackageQuestion4" inverseField="replies"/>
    	</entity>
        <entity symbol="ResourceFolderExtractor" baseEntity="delivery.ResourceFileBaseExtractor" abstract="true"  label="Resource Folder">
            <topic symbol="a" viewForm="body">
                <topic symbol="connection">
                    <field symbol="folderPath" valueEntity="system.DirectoryPath" composite="true" label="Root folder" multiplicity="1"/>
                    <field symbol="connectionURL" override="true">
                        <value formula="true">(folderPath)</value>
                    </field>
                </topic>
                <topic symbol="parameters">
                    <field symbol="javaClassName" override="true">
                        <description>Use a formula in order to ensure that this value is transient and can be updated later</description>
                        <value formula="true">'com.castsoftware.dmt.extractor.filesystem.FileSystemExtractor'</value>
                    </field>
                </topic>
            </topic>
        </entity>
        <entity symbol="SourceFolderExtractor" baseEntity="delivery.SourceFileBaseExtractor" label="Folder on your local file system">
            <topic symbol="a" viewForm="body">
                <topic symbol="connection">
                    <field symbol="folderPath" valueEntity="system.DirectoryPath" composite="true" label="Root folder" multiplicity="1">
                      <helpText>Select the folder from which the source code will be extracted</helpText>
                    </field>
                    <field symbol="connectionURL" override="true">
                        <value formula="true">(folderPath)</value>
                    </field>
                    <field symbol="wizardReference" valueEntity="delivery.AddPackageReply" transient="true" value="SourceAddPackageReply">
                    	<helpText>Select a source folder on your local file system</helpText>
                    </field>
                    <field symbol="connectionMappedURL" valueEntity="system.String" length="500" label="Original location" multiplicity="0..1">
                      <helpText>Optional. If the source code has been copied from its original location, please specify the original path if some references are using a full path.</helpText>
                    </field>
                </topic>
                <topic symbol="parameters">
                    <field symbol="javaClassName" override="true">
                        <description>Use a formula in order to ensure that this value is transient and can be updated later</description>
                        <value formula="true">'com.test.dmt.extractor.filesystem.FileSystemExtractor'</value>
                    </field>
		          <field symbol="extraParameterFields" override="true">
		            <value formula="true">'connectionMappedURL=connectionMappedURL'</value>
		          </field>
                </topic>
            </topic>
        </entity>
    </library>

	<conversion requires="" provides="dmttestfolderextractor:1.0">
		<!-- Library installation -->
	</conversion>
</document>